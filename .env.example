# Environment Configuration
# Options: "localhost" (local development), "development" (Docker), "production"
ENVIRONMENT=localhost

# Server Configuration
DEBUG=true
PORT=8000

# Database Configuration
# For localhost development:
#   DATABASE_URL=mysql+pymysql://root:admin@127.0.0.1:3306/mychitfund
# For Docker development:
#   DATABASE_URL=mysql+pymysql://root:admin@db:3306/mychitfund
DATABASE_URL=mysql+pymysql://root:admin@127.0.0.1:3306/mychitfund

# Redis Configuration
# For localhost development:
#   REDIS_URL=redis://localhost:6379/0
# For Docker development:
#   REDIS_URL=redis://redis:6379/0
REDIS_URL=redis://localhost:6379/0

# API Configuration
API_TITLE=MyChitFund API
API_VERSION=1.0.0
API_DESCRIPTION=API for managing users in MyChitFund application

# CORS Configuration (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000,http://127.0.0.1:3001,http://smchitfund.local:3001,http://smchitfund.local:3000,http://smchitfund.local,http://www.smchitfund.local,http://api.smchitfund.local

# Logging
LOG_LEVEL=info
